  <div class="container">
	  <div class="section">
		<img class="responsive-img" src="assets/img/burger-outline-filled.png">
		<h1>Eat Da Burger!</h1>
	  </div>
  	  <div class="divider"></div>
	  <div class="row">
	  	<div class="col s6">
	  		<ul class="collection">
	  		  {{#each burgers}}
	  		    {{#unless this.devoured}}
	  		      <li class="collection-item">
	  		        {{this.burger_name}}

	  		        <form action="/{{this.id}}?_method=PUT" method="POST">
	  		          <input type="hidden" name="devour" value="true">
	  		          <button class="btn waves-effect waves-light" type="submit" name="action">Devour!
	  		            <i class="material-icons right">local_dining</i>
	  		          </button>
	  		        </form>
	  		      </li>
	  		    {{/unless}}
	  		  {{/each}}
	  		</ul>
	  	</div>
	  	<div class="col s6">
	  		<ul class="collection">
	  		  {{#each burgers}}
	  		    {{#if this.devoured}}
	  		      <li class="collection-item">
	  		        {{this.burger_name}}
	  		      </li>
	  		    {{/if}}
	  		  {{/each}}
	  		</ul>
	  	</div>
	  </div>
  	  <div class="divider"></div>
	  <div class="row">
	  	<h2>Enter a new burger below</h2>
	  	<form class="create-update-form" action="/" method="POST">
        	<div class="input-field col s12">
	          	<input id="input_text" name="name" type="text" data-length="50">
	          	<label for="input_text">Burger Name</label>
        	</div>
        	<button class="btn waves-effect waves-light" type="submit" name="action">Submit
        	  <i class="material-icons right">send</i>
        	</button>
    	</form>
      </div>
</div>